							<defName>Mashed_AchievementSpiribirds_InteractMany</defName>
							<label>Spiribird Friend</label>
							<description>Have a spiribird interact with a pawn wearing a petalace for the tenth time</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.RecordEventTracker">
								<def>Mashed_Spiribird_SpiribirdInteractions</def>
								<count>10</count>
							</tracker>
							<texPath>Achievements/Mashed_AchievementSpiribirds_InteractMany</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>
						
