							<points>15</points>
						</AchievementsExpanded.AchievementDef>

						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribirds_PetalacePrism</defName>
							<label>Prismatic</label>
							<description>Craft a legendary quality prism petalace</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.ItemCraftTracker">
								<def>Mashed_Spiribird_ApparelPetalacePrism</def>
