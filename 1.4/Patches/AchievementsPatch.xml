									</li>
									<li>
										<key>Mashed_Spiribird_SpiribirdYellow</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribirds_TamerFirst</texPath>
							<points>5</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribirds_TamerAll</defName>
							<label>Spiribird Enthusiast</label>
							<description>Have all kinds of spiribird at the same time, excluding prism</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>true</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribird_SpiribirdGreen</key>
										<value>1</value>
