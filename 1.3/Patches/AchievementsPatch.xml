									<li>
										<key>Mashed_Spiribird_SpiribirdOrange</key>
										<value>1</value>
									</li>
									<li>
										<key>Mashed_Spiribird_SpiribirdRed</key>
										<value>1</value>
									</li>
									<li>
										<key>Mashed_Spiribird_SpiribirdYellow</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribirds_TamerAll</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribirds_TamerPrism</defName>
							<label>All the Colours of the Rainbow</label>
							<description>Tame your first prism spiribird</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>SMP_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>false</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribird_SpiribirdPrism</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribirds_TamerPrism</texPath>
							<points>15</points>
						</AchievementsExpanded.AchievementDef>
						
