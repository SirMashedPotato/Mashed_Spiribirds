						<!-- Taming -->
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribirds_TamerFirst</defName>
							<label>Spiribird Tamer</label>
							<description>Tame your first spiribird of any kind, excluding prism</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>SMP_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>false</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribird_SpiribirdGreen</key>
